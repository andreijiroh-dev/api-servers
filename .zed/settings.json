{
  "autosave": {
    "after_delay": {
      "milliseconds": 10000
    }
  },
  "format_on_save": "language_server",
  "formatter": "prettier",
  "tab_size": 2,
  "hard_tabs": false,
  "tabs": {
    "git_status": true
  }
}
